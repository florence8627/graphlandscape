extend layout

block content
  h3 Login
  - if (message.length > 0) {
    .alert #{message}
  - }
    form(action='/login', method='post')
      .form-group
        label Email
        input.form-control(type='text', name='email')
      .form-group
        label Password
        input.form-control(type='password', name='password')
      button.btn(type='submit') Login
    hr
    p
      | Need an account?
      a(href='/signup') Signup
    p
      | Or go
      a(href='/') Home
